@page "/cases/new"

@inject CaseStore CaseStore
@inject NavigationManager NavigationManager
@inject ZhouyiProvider ZhouyiProvider

<PageTitle>起卦 - 冬日梅花</PageTitle>

<MudText Typo="Typo.h3" Class="mb-5">快速起卦</MudText>

<MudForm>
    <MudTextField T="DateTime?" @bind-Value="Time" Label="起卦时间" Format="s" InputType="InputType.DateTimeLocal" Error="timeError" ErrorText="不支持的起卦时间" FullWidth="false" Variant="Variant.Outlined" Class="pb-3"/>

    <MudTextField T="string" @bind-Value="Upper" Label="上卦表达式" Error="upperError" ErrorText="解析失败" FullWidth="false" Variant="Variant.Outlined" Class="pb-3"></MudTextField>

    <MudTextField T="string" @bind-Value="Lower" Label="下卦表达式" Error="lowerError" ErrorText="解析失败" FullWidth="false" Variant="Variant.Outlined" Class="pb-3"></MudTextField>

    <MudTextField T="string" @bind-Value="Line" Label="动爻表达式" Error="lineError" ErrorText="解析失败" FullWidth="false" Variant="Variant.Outlined" Class="pb-3"></MudTextField>

    <MudButton Color="Color.Primary" @onclick="Submit">起卦</MudButton>
</MudForm>
